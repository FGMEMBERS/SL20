<?xml version="1.0"?>
<PropertyList>
	<params>
		<water-trigger>controls/ballast/action</water-trigger>
	</params>
	<particlesystem>
		<name>startup</name>
		<texture>smoke.png</texture>
		<emissive>false</emissive>
		<lighting>false</lighting>
		<condition>
			<equals>
				<property alias="../../../../params/water-trigger"/>
				<value>1</value>	
			</equals>
		</condition>
		<align>billboard</align> <!-- billboard / fixed -->
		<attach>world</attach> <!-- world / local-->
		<offsets>
			<x-m>0</x-m>
			<y-m>0.0</y-m>
			<z-m>0</z-m>
			<pitch-deg>0.0</pitch-deg>
		</offsets>
		<placer>
			<type>point</type> <!-- sector / segments / point -->
		</placer>
		<shooter>
			<theta-min-deg>150</theta-min-deg>
			<theta-max-deg>160</theta-max-deg>
			<phi-min-deg>70</phi-min-deg>
			<phi-max-deg>100</phi-max-deg>
			<speed-mps>
				<value>5</value>
				<spread>0.2</spread>
			</speed-mps>
			<rotation-speed>
				<x-min-deg-sec>15</x-min-deg-sec>
				<y-min-deg-sec>-15</y-min-deg-sec>
				<z-min-deg-sec>15</z-min-deg-sec>
				<x-max-deg-sec>-15</x-max-deg-sec>
				<y-max-deg-sec>15</y-max-deg-sec>
				<z-max-deg-sec>-15</z-max-deg-sec>
			</rotation-speed>
		</shooter>
		<counter>
			<particles-per-sec>
				<value>50</value>
				<spread>30</spread>
			</particles-per-sec>
		</counter>
		<particle>
			<start>
				<color>
					<red>
						<value>0.8</value>
					</red>
					<green>
						<value>0.8</value>
					</green>
					<blue>
						<value>0.95</value>
					</blue>
					<alpha>
						<value>0.9</value>
					</alpha>
				</color>
				<size>
					<value>0.40</value>
				</size>
			</start>
			<end>
				<color>
					<red>
						<value>0.8</value>
					</red>
					<green>
						<value>0.8</value>
					</green>
					<blue>
						<value>0.95</value>
					</blue>
					<alpha>
						<value>0.01</value>
					</alpha>
				</color>
				<size>
					<value>1.6</value>
				</size>
			</end>
			<life-sec>20</life-sec>
			<mass-kg>15.0</mass-kg>
			<radius-m>0.05</radius-m>
		</particle>
		<program>
			<fluid>air</fluid>         <!-- air / water -->
			<gravity>true</gravity>
			<wind>true</wind>
		</program>
	</particlesystem>
</PropertyList>

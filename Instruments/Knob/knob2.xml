<?xml version="1.0"?>

<PropertyList> 
	
	<path>knob.ac</path>
	
	<offsets>
		<!-- x/y/z == back/right/up -->
		<x-m> 0.000 </x-m>
		<y-m> 0.000 </y-m>
		<z-m> 0.000 </z-m>
	</offsets>
	
	<animation>
		<type>pick</type>
		<object-name>Knob</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>SL20.toggleLandingLight();</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>Knob</object-name>
		<property>/controls/lighting/landing-light</property>
		<interpolation> 
			<entry><ind>0</ind><dep>0.0</dep></entry>
			<entry><ind>1</ind><dep>-50.0</dep></entry>
		</interpolation>
		<center>
			<x-m>  0.00 </x-m>
			<y-m>  0.00 </y-m>
			<z-m>  0.00 </z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
</PropertyList>
